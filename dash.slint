export component IconBox {
    in property <string> text: "test";
    in property <image> icon: @image-url("assets/snow.png");
    Rectangle {
        width: 38px;
        height: 12px;
        HorizontalLayout {
            width: 100%;
            height: 100%;
            spacing: 3px;
            
            alignment: center;

            Image {
                width: 12px;
                height: 12px;
                source: root.icon;
                accessible-label: "icon";
            }
            
            Text {
                text: root.text;
                overflow: elide; 
            }
        }
    }
}

export component DashBox inherits Rectangle {
    border-width: 1px;
    border-color: black;
    border-radius: 4px;
    GridLayout {
        spacing: 2px;
        padding: 2px;
        Row {
            IconBox {}
            IconBox {}
        }
        Row {
            IconBox {}
            IconBox {}
        }
        Row {
            IconBox {}
            IconBox {}
        }
    }

}

export component DashBoard inherits VerticalLayout {
    alignment: stretch;
    vertical-stretch: 1.0;
    Text {
        height: 8px;
        wrap: TextWrap.word-wrap;
        text: "<식물이름>";
    }
        HorizontalLayout {
            vertical-stretch: 1.0;
            DashBox {}
            VerticalLayout {
                IconBox {}
                IconBox {}
            }

        }
}
