export component DashBox inherits Rectangle {
    border-width: 1px;
    border-color: black;
    border-radius: 4px;
    GridLayout {
        spacing: 2px;
        padding: 2px;
        Row {
            FanBox {}
            LightBox {}
        }
        Row {
            WaterBox {}
            HumBox {}
        }
        Row {
            TempBox {}
            CoolBox {}
        }
    }

}

export component DashBoard inherits VerticalLayout {
    alignment: stretch;
    vertical-stretch: 1.0;
    spacing: 1px;
    Text {
        height: 8px;
        wrap: TextWrap.word-wrap;
        text: "<식물이름>";
    }
        HorizontalLayout {
            vertical-stretch: 1.0;
            DashBox {}
